<%= form_tag( {},{:id=>"list", :name=>"list"}) do %>
  <%= render :partial => "buttons" %>
  <table class="list-table">
    <col class="checkbox"/><col span=2 class="coldata"/>
    <col class="coldate"/><col class="actions"/>
    <tr>
      <th> <%= checkable_field_header %></th>
      <th> <%= sortable_field_header t("activeview.columns.payment_type.name"), "payment_types.name" %> </th>
      <th> <%= sortable_field_header t("activeview.columns.payment_type.code"), "pattern_types.code" %> </th>
      <th> <%= sortable_field_header t("activeview.columns.payment_type.created_at"), "pattern_types.created_at" %></th>
      <th> <%= t("activeview.columns.payment_type.actions") %> </th>
    </tr>
    <% @payment_types.each do |payment_type| %>
      <tr>
        <td><%= check_box_tag('ids[]', payment_type.id, false) %></td>
        <td><%= link_to payment_type.name, :action => "edit", :id =>payment_type %></td>
        <td><%= link_to payment_type.code, :action => "edit", :id =>payment_type %></td>
        <td><%= localize(payment_type.created_at, :format => :long) %></td>
        <td>
          <%=link_to(image_tag("buttons/update_object.png", {:alt => "Update", :title => "Update"}), :action => "edit", :id => payment_type) %>
          <%=link_to(image_tag("buttons/delete_object.png", {:alt => "Delete", :title => "Delete"}), :action => "destroy", :id => payment_type) %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= render :partial => "buttons" %>
<%end%>
