<%form_tag( {},{:id=>"list", :name=>"list"}) do %>
  <%= render :partial => "buttons" %>
  <table class="list-table">
   <col class="checkbox"/><col class="actions"/><col class="coldata"/>
    <tr>
      <th><%= checkable_field_header %></th>
      <th> Actions </th>
      <th> <%= sortable_field_header "Promotion", "promotions.name" %> </th>
    </tr>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= check_box_tag('ids[]', promotion.id, false) %></td>
        <td>
          <ul class="action-menu">
            <li>
              <%= link_to "What to do?", {:action => "edit", :id => promotion} %>
              <ul>
                <li><%= link_to 'Update',{:action => "edit", :id => promotion} %></li>
                <li><%= link_to 'Delete',{:action => "destroy", :id => promotion} %></li>
              </ul>
            </li>
          </ul>
        </td>
        <td><%= link_to promotion.name, :action => "edit", :id =>promotion %></td>
      </tr>
    <% end %>
  </table>
  <%= render :partial => "buttons" %>
<%end%>
