# Configure plugin
RmagickCaptcha::options[:controller] = 'rmagick_captcha'
RmagickCaptcha::options[:action] = 'show'
RmagickCaptcha::options[:id] = 'id'
RmagickCaptcha::options[:captcha_key_len] = 4
RmagickCaptcha::options[:case_sensitive] = true
RmagickCaptcha::options[:random_chars] = "ABCDEFGHJKLMNPQRSTUVWXYZ" + "0123456789"
RmagickCaptcha::options[:random_colors] = ["red", "blue", "green", "gray", "pink"]
RmagickCaptcha::options[:img_format] = 'png'
