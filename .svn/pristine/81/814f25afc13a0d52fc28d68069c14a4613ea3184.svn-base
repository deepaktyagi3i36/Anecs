/*
 * TinyMCE specific rules
 *   TinyMCE styles
*/

/* =TinyMCE styles
-------------------------------------------------------------------*/
.mceContentBody {
  font-family: "trebuchet MS", Arial, Helvetica, sans-serif;
  font-size: 12px;
  color: #545454;
}

.mceContentBody h1 {
  color: #a40304;
  font-weight: normal;
  font-size: 22px;
}

.mceContentBody h2 {
  font-size: 14px;
  margin: 5px 0;
  color:black;
  font-weight: normal;
  margin-left:14px;
}

.mceContentBody h3 {
  font-weight:bold;
  font-size: 14px;
  color:#0b0b0b;
  margin-left:14px;
}

.mceContentBody h4 {
  font-weight:bold;
  color:#0b0b0b;
  font-style:italic;
  margin-left:14px;
}

.mceContentBody p {
  text-indent:12px;
  font:"Trebuchet MS", Arial, Helvetica, sans-serif;
}

.mceContentBody ul {
  margin-left:0px;
  list-style:none;
}

.mceContentBody ul li {
  background:url(/images/decorators/square.png) left top no-repeat;
  padding-left:15px;
}
