<div id="list-menu-box">
  <div id="list-menu-title">
    <%= t("navigation.myaccount.mainmenu.welcome") %>
  </div>
  <ul id="list-menu">
    <%= list_menu_item :label => t("navigation.myaccount.listmenu.dashboard"),
                       :url => "/myaccount/welcome/dashboard",
                       :match_path => "^\/(myaccount(\/)?|myaccount\/welcome(\/)?|myaccount\/welcome\/dashboard(.*))$" %>
    <%= list_menu_item :label => t("navigation.myaccount.listmenu.myprofile"),
                       :url => "/myaccount/welcome/myprofile/edit",
                       :match_path => "^\/(myaccount\/welcome\/myprofile(.*))$" %>
    <%= list_menu_item :label => t("navigation.myaccount.listmenu.password"),
                       :url => "/myaccount/welcome/password/edit",
                       :match_path => "^\/(myaccount\/welcome\/password(.*))$" %>
    <%= list_menu_item :label => t("navigation.myaccount.listmenu.complaints"),
                       :url => "/myaccount/welcome/complaints",
                       :match_path => "^\/(myaccount\/welcome\/complaints(.*))$" %>
  </ul>
</div>
