<%= form_tag( {},{:id=>"list", :name=>"list"}) do %>
  <%= render :partial => "buttons" %>
  <table class="list-table">
    <col class="checkbox"/><col class="actions"/><col class="coldata"/>
    <tr>
      <th><%= checkable_field_header %></th>
      <th> Actions </th>
      <th> <%= sortable_field_header "Center", "product_id" %> </th>
      <th> <%= sortable_field_header "Agent", "user_id" %> </th>
      <th> <%= sortable_field_header t("activeview.columns.agent.created_at"), "created_at" %></th>
    </tr>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= check_box_tag('ids[]', agent.id, false) %></td>
        <td>
          <ul class="action-menu">
            <li>
              <%= link_to "What to do?", {:action => "edit", :id => agent} %>
              <ul>
                <li><%= link_to 'Update',{:action => "edit", :id => agent} %></li>
                <li><%= link_to 'Delete',{:action => "destroy", :id => agent} %></li>
              </ul>
            </li>
          </ul>
        </td>
        <td><%= link_to agent.product.name, :action => "edit", :id =>agent %></td>
        <td><%= link_to agent.user.login, :action => "edit", :id =>agent %></td>
        <td><%= localize(agent.created_at, :format => :long) %></td>
      </tr>
    <% end %>
  </table>
  <%= render :partial => "buttons" %>
<%end%>
