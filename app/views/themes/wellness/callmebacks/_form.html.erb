<%= form_for(@callmeback, :url => {:action => action_name, :id => @callmeback.id},
  :html => {:id => "callmeback_form", :class => "basic-form" }) do |f| %>
  <%= render :partial => "header" %>
  <%= f.error_messages %>
  <fieldset>
    <ul>
      <li>
        <%= f.mandatory_label :contact_type_id %>
        <%= f.collection_select :contact_type_id, @contact_types, :id, :name %>
        <%= f.error_message_on :contact_type_id %>
      </li>
      <li>
        <%= f.mandatory_label :title %>
        <%= f.text_field :title %>
        <%= f.error_message_on :title %>
      </li>
      <li>
        <%= f.mandatory_label :phone %>
        <%= f.text_field :phone %>
        <%= f.error_message_on :phone %>
      </li>
      <li>
        <%= f.mandatory_label :body %>
        <%= f.text_area :body %>
        <%= f.error_message_on :body %>
      </li>
    </ul>
    <% if @current_user.nil? %>
      <%# TODO: rewrite the right captcha %>
      <%# = render :partial => "shared/captcha", :locals => {:f => f} %>
    <% end %>
    <%= f.submit button_label %>
  </fieldset>
<% end %>
<%= set_focus_on_load("callmeback_title") %>
