<div class="buttons-panel">
  <% ctrl = "/framework/heartbeat/websites" %>
  <% disabled = (@websites.size > 0 ? false : true)%>
  <%=submit_tag t("buttons.create"), :onclick => "document.list.action='#{ctrl}/new';" %>
  <%=submit_tag t("buttons.delete"), :onclick => "document.list.action='#{ctrl}/destroy';", :disabled => disabled %>
  <%=submit_tag t("buttons.make_primary"), :onclick => "document.list.action='#{ctrl}/primary';", :disabled => disabled %>
  <%= render :partial => "templates/paginator_with_info", :locals => { :objects => @websites } %>
</div>
