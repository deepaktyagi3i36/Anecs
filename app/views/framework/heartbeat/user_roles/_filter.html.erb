<%= form_for :user_filter, :url => {:action => "index"},
:html => {:method => :get, :id => "user_roles_filter", :class => "list-filter" } do |f| %>
  <%= f.error_messages %>
  <fieldset>
    <ul>
      <li>
        <%= f.label :role_id %>
        <%= f.collection_select :role_id, @roles_filter, :id, :name %>
        <%= f.error_message_on :role_id %>
      </li>
      <li>
        <%= f.label :user_id %>
        <%= f.collection_select :user_id, @users_filter, :id, :login %>
        <%= f.error_message_on :user_id %>
      </li>
      <li>
        <%= f.label :created_at_since %>
        <%= f.date_time_picker :created_at_since %>
        <%= f.error_message_on :created_at_since %>
      </li>
      <li>
        <%= f.label :created_at_till %>
        <%= f.date_time_picker :created_at_till %>
        <%= f.error_message_on :create_at_after %>
      </li>
    </ul>
    <%= f.submit t("buttons.filtrate") %>
  </fieldset>
<% end %>
<%= set_focus_on_load("user_role_filter_role_id") %>
