<%= form_tag( {},{:id=>"list", :name=>"list"}) do %>
  <%= render :partial => "buttons" %>
  <table class="list-table">
    <col class="checkbox"/><col span=2 class="coldata"/>
    <col class="coldate"/><col class="actions"/>
    <tr>
      <th> <%= checkable_field_header %></th>
      <th> <%= sortable_field_header t("activeview.columns.order_state.name"), "order_states.name" %> </th>
      <th> <%= sortable_field_header t("activeview.columns.order_state.code"), "order_states.code" %> </th>
      <th> <%= sortable_field_header t("activeview.columns.order_state.created_at"), "order_states.created_at" %></th>
      <th> <%= t("activeview.columns.order_state.actions") %> </th>
    </tr>
    <% @order_states.each do |order_state| %>
      <tr>
        <td><%= check_box_tag('ids[]', order_state.id, false) %></td>
        <td><%= link_to order_state.name, :action => "edit", :id =>order_state %></td>
        <td><%= link_to order_state.code, :action => "edit", :id =>order_state %></td>
        <td><%= localize(order_state.created_at, :format => :long) %></td>
        <td>
          <%=link_to(image_tag("buttons/update_object.png", {:alt => "Update", :title => "Update"}), :action => "edit", :id => order_state) %>
          <%=link_to(image_tag("buttons/delete_object.png", {:alt => "Delete", :title => "Delete"}), :action => "destroy", :id => order_state) %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= render :partial => "buttons" %>
<%end%>
