<%= form_for(@announcement, :url => {:action => action_name, :id => @announcement.id},
	:html => {:id => "announcement_form" }) do |f| %>

    <%= f.error_messages %>
    <p style="color: green"><%= flash[:notice] %></p>

	<p>
    <%= f.label :announcement_status_id %>
    <%= f.collection_select :announcement_status_id, @statuses, :id, :name %>
    <%= f.error_message_on :announcement_status_id %>
	</p>

	<p>
    <%= f.label :product_id %>
    <%= f.collection_select :product_id, @products, :id, :name %>
    <%= f.error_message_on :product_id %>
	</p>

	<p>
	  <%= f.label :title %>
	  <%= f.text_field :title %>
	  <%= f.error_message_on :title %>
	</p>

	<p>
	  <%= f.label :body %>
	  <%= f.text_area :body %>
	  <%= f.error_message_on :body %>
	</p>


  <p>
    <%= f.submit button_label %>
  </p>
<% end %>
<%= set_focus_on_load("announcement_title") %>
