<%= form_tag( {},{:id=>"list", :name=>"list"}) do %>
  <%= render :partial => "buttons" %>
  <table class="list-table">
   <col class="checkbox"/><col class="actions"/><col class="coldata"/>
    <tr>
      <th><%= checkable_field_header %></th>
      <th> Actions </th>
      <th> <%= sortable_field_header "Property", "properties.name" %> </th>
      <th> <%= sortable_field_header "ProductType", "product_types.name" %> </th>
    </tr>
    <% @product_type_properties.each do |product_type_property| %>
      <tr>
        <td><%= check_box_tag('ids[]', product_type_property.id, false) %></td>
        <td>
          <ul class="action-menu">
            <li>
              <%= link_to "What to do?", {:action => "edit", :id => product_type_property}.merge(params) %>
              <ul>
                <li><%= link_to 'Update',{:action => "edit", :id => product_type_property} %></li>
                <li><%= link_to 'Delete',{:action => "destroy", :id => product_type_property} %></li>
              </ul>
            </li>
          </ul>
        </td>
        <td><%= link_to product_type_property.property.name, :action => "edit", :id =>product_type_property %></td>
        <td><%= link_to product_type_property.product_type.name, :action => "edit", :id =>product_type_property %></td>
      </tr>
    <% end %>
  </table>
  <%= render :partial => "buttons" %>
<%end%>


