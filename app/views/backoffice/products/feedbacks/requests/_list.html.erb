<%= form_tag( {},{:id=>"list", :name=>"list"}) do %>
  <%= render :partial => "buttons" %>
  <table class="list-table">
   <col class="checkbox"/><col class="actions"/><col class="coldata"/>
    <tr>
      <th><%= checkable_field_header %></th>
      <th> Actions </th>
      <th> <%= sortable_field_header "Product", "products.name" %> </th>
      <th> <%= sortable_field_header "Title", "requests.title" %> </th>
      <th> <%= sortable_field_header t("activeview.columns.request.created_at"), "created_at" %></th>
    </tr>
    <% @requests.each do |request| %>
      <tr>
        <td><%= check_box_tag('ids[]', request.id, false) %></td>
        <td>
          <ul class="action-menu">
            <li>
              <%= link_to "What to do?", {:action => "edit", :id => request} %>
              <ul>
                <li><%= link_to 'Update',{:action => "edit", :id => request} %></li>
                <li><%= link_to 'Delete',{:action => "destroy", :id => request} %></li>
              </ul>
            </li>
          </ul>
        </td>
        <td><%= link_to request.product.name, :action => "edit", :id =>request %></td>
        <td><%= link_to request.title, :action => "edit", :id =>request %></td>
        <td><%= localize(request.created_at, :format => :long) %></td>
      </tr>
    <% end %>
  </table>
  <%= render :partial => "buttons" %>
<%end%>
